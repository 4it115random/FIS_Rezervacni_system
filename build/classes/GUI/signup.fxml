<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="578.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.SignupController">
   <children>
      <ImageView fx:id="backgroundImg" fitHeight="400.0" fitWidth="700.0" layoutY="-3.0">
         <image>
            <Image url="@../resources/background_theme.jpg" />
         </image>
      </ImageView>
      <Label layoutX="267.0" layoutY="45.0" text="Registrace" textFill="#ffeeee">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
      <TextField fx:id="usernameSignUp" layoutX="257.0" layoutY="110.0" promptText="Přihlašovací jméno" />
      <TextField fx:id="passwordSignUp" layoutX="257.0" layoutY="150.0" promptText="Heslo" />
      <TextField fx:id="nameSignUp" layoutX="257.0" layoutY="190.0" promptText="Jméno" />
      <TextField fx:id="surnameSignUp" layoutX="257.0" layoutY="230.0" promptText="Příjmení" />
      <TextField fx:id="emailSignUp" layoutX="257.0" layoutY="270.0" promptText="E-mail" />
      <Button layoutX="295.0" layoutY="318.0" mnemonicParsing="false" onAction="#SignUp" prefHeight="31.0" prefWidth="111.0" text="Odeslat" />
      <Button layoutY="-3.0" mnemonicParsing="false" onAction="#Return" prefHeight="31.0" prefWidth="75.0" text="Jít zpět" />

      <Label fx:id="invalidUsernameLbl" layoutX="240.0" layoutY="350.0" text="Přihlašovací jméno je již obsazeno" textAlignment="CENTER" textFill="RED" visible="false" />
      <Label fx:id="invalidEmailLbl" layoutX="280.0" layoutY="350.0" text="E-mail je již obsazen" textAlignment="CENTER" textFill="RED" visible="false" />
      <Label fx:id="invalidFillingLbl" layoutX="240.0" layoutY="350.0" text="Všechny pole musí být vyplněny" textAlignment="CENTER" textFill="RED" visible="false" />
   </children>
</AnchorPane>
