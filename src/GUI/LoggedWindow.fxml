<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoggedWindowController">
   <children>
      <Label layoutX="146.0" layoutY="23.0" text="Přehled aktuálních představení">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Separator layoutX="121.0" layoutY="-11.0" orientation="VERTICAL" prefHeight="718.0" prefWidth="25.0" />
      <MenuButton layoutX="8.0" layoutY="61.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="117.0" text="Menu">
        <items>
          <MenuItem mnemonicParsing="false" text="Zpráva lístků" />
          <MenuItem fx:id="logOutBtn" mnemonicParsing="false" onAction="#LogOut" text="Odhlášení" />
        </items>
      </MenuButton>
      <TableView fx:id="eventsTable" layoutX="146.0" layoutY="74.0" prefHeight="305.0" prefWidth="417.0">
        <columns>
          <TableColumn fx:id="nazevColumn" prefWidth="197.0" text="Název" />
          <TableColumn fx:id="timeColumn" prefWidth="219.0" text="Čas představení" />
        </columns>
      </TableView>
      <Button layoutX="601.0" layoutY="112.0" mnemonicParsing="false" onAction="#showDetails" prefHeight="45.0" prefWidth="85.0" text="Zobrazit podrobnosti" wrapText="true" />
