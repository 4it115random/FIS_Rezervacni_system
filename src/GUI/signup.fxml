<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" maxHeight="480.0" maxWidth="800.0" prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.SignupController">
   <children>
      <ImageView fx:id="backgroundImg" fitHeight="493.0" fitWidth="800.0" layoutY="-3.0">
         <image>
            <Image url="@../resources/background_theme.jpg" />
         </image>
      </ImageView>
      <Label layoutX="308.0" layoutY="56.0" prefHeight="68.0" prefWidth="212.0" text="Registrace" textFill="#ffeeee">
         <font>
            <Font name="Cambria" size="42.0" />
         </font>
      </Label>
      <TextField fx:id="usernameSignUp" layoutX="307.0" layoutY="140.0" prefHeight="35.0" prefWidth="200.0" promptText="Přihlašovací jméno" />
      <PasswordField fx:id="passwordSignUp" layoutX="307.0" layoutY="180.0" prefHeight="35.0" prefWidth="200.0" promptText="Heslo" />
      <TextField fx:id="nameSignUp" layoutX="307.0" layoutY="220.0" prefHeight="35.0" prefWidth="200.0" promptText="Jméno" />
      <TextField fx:id="surnameSignUp" layoutX="307.0" layoutY="260.0" prefHeight="35.0" prefWidth="200.0" promptText="Příjmení" />
      <TextField fx:id="emailSignUp" layoutX="307.0" layoutY="300.0" prefHeight="35.0" prefWidth="200.0" promptText="E-mail" />
      <Button layoutX="333.0" layoutY="348.0" mnemonicParsing="false" onAction="#SignUp" prefHeight="47.0" prefWidth="134.0" text="Odeslat" />
      <Button layoutX="2.0" mnemonicParsing="false" onAction="#Return" prefHeight="35.0" prefWidth="109.0" text="Jít zpět" />

      <Label fx:id="invalidUsernameLbl" layoutX="240.0" layoutY="350.0" text="Přihlašovací jméno je již obsazeno" textAlignment="CENTER" textFill="RED" visible="false" />
      <Label fx:id="invalidEmailLbl" layoutX="280.0" layoutY="350.0" text="E-mail je již obsazen" textAlignment="CENTER" textFill="RED" visible="false" />
      <Label fx:id="invalidFillingLbl" layoutX="240.0" layoutY="350.0" text="Všechny pole musí být vyplněny" textAlignment="CENTER" textFill="RED" visible="false" />
      <Label fx:id="badFormEmail" layoutX="520.0" layoutY="361.0" text="Špatný tvar emailu" textFill="RED" visible="false" />
      <Label fx:id="badFormUName" layoutX="493.0" layoutY="361.0" text="Nesprávné prihlašovací jméno" textFill="RED" visible="false" />
      <Label fx:id="badFormPaswd" layoutX="507.0" layoutY="361.0" text="Nesprávné heslo" textFill="RED" visible="false" />
      <Label fx:id="badFormName" layoutX="545.0" layoutY="361.0" text="Nesprávne jméno" textFill="RED" visible="false" />
      <Label fx:id="badFormSurname" layoutX="517.0" layoutY="361.0" text="Nesprávne příjmení" textFill="RED" visible="false" />
   </children>
</AnchorPane>
